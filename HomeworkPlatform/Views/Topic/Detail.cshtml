@using HomeworkPlatform.Models;
@model HomeworkModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="margin-top: 1em;"> C# 期末專題 </h2>
<hr />

<div class="card" style="margin-top: 1em;">
    <div class="card-header">
        <h3 class="card-title">@Model.Title</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row" style="width: 25%;">Uploader</th>
                    <td style="width: 75%;">@Model.Author</td>
                </tr>
                <tr>
                    <th scope="row" style="width: 25%;">Time</th>
                    <td style="width: 75%;"><time> @Model.Time </time></td>
                </tr>
                <tr>
                    <th scope="row" style="width: 25%;">Data Size</th>
                    <td style="width: 75%;"><span class="badge badge-dark"> 1000 kb </span></td>
                </tr>
            </tbody>
        </table>
        
        <p class="card-text">
            @Html.Raw(HttpUtility.HtmlDecode(@Model.Content))
        </p>
    </div>
    <div class="card-footer">
        <a href="~/Static/Homework/@Model.ServerFilePath" class="btn btn-danger w-100">Download</a>

</div>
</div>

<h2 style="margin-top: 1em;"> 評論區 Comment </h2>
<hr/>

@{
    for (int i = 0; i < 3; ++i)
    {
        <div class="card border-primary mb-3">
            <div class="card-header">評論 #@(i + 1)</div>
            <div class="card-body text-primary">
                <h5 class="card-title">邱百纓</h5>
                <p class="card-text">太猛啦</p>
            </div>
        </div>
    }
}
