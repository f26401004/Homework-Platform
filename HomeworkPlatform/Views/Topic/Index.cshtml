    ViewBag.Title = "查看列表";
}

<div class="col-12" style="display: flex; flex-wrap: wrap; justify-content: space-between; margin-top: 1em;">
    <h2 class="d-block">@ViewBag.Title.</h2>
    <form class="d-block">
        <input class="form-control d-inline" style="width: 66%; margin-right: 1em;" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
    
</div>
